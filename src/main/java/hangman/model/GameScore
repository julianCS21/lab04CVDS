package hangman.model;

public interface GameScore {

    /**
     * Es el metodo que se encarga de calcular los puntajes del juego
     * @pre El puntaje mínimo es 0
     * @pos El puntaje quedará actualizado segun el esquema elegido
     * @param correctCount, es el conteo correcto
     * @param incorrectCount, es el conteo incorrecto
     * @return es el puntaje obtenido al final
     */
    int calculateScore(int correctCount, int incorrectCount) throws IllegalAccessException;

}